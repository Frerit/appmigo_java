<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:tag="fragment_slider4_return"
        android:layout_height="match_parent"
        tools:context=".module.maps.fragment.IncidentSlider4Fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="499dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ms_progress_message_lateral_padding"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/incidentImage"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:visibility="gone"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp">

                    <com.varunest.sparkbutton.SparkButton
                        android:id="@+id/incidentCaptureFoto"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:sparkbutton_activeImage="@drawable/camera"
                        app:sparkbutton_inActiveImage="@drawable/camera"
                        app:sparkbutton_primaryColor="@color/colorPrimary"
                        app:sparkbutton_secondaryColor="@color/colorAccent" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="o Cuentanos que paso:"
                android:layout_marginTop="80dp"/>


            <EditText
                android:id="@+id/incidentDescription"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:ems="15"
                android:inputType="textMultiLine" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>